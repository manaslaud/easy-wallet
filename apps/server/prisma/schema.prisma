generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_PROD")
}

model UserAccount {
  createdAt       DateTime @default(now())
  id              String   @id @default(uuid())
  solanaKeyPairs  Int
  ethrereKeyPairs Int
  KeyPairs        Json
  contacts        Contact[]
}

model Contact {
  id             String      @id @default(uuid())
  createdAt      DateTime    @default(now())
  userAccountId  String
  userAccount    UserAccount @relation(fields: [userAccountId], references: [id], onDelete: Cascade)
  chain          String      // 'solana' | 'ethereum'
  network        String      // e.g. 'devnet' | 'testnet' | 'mainnet-beta' | 'sepolia' | 'mainnet'
  address        String
  label          String

  @@index([userAccountId])
  @@unique([userAccountId, chain, network, address])
}
